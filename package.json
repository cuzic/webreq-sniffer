{
  "name": "webreq-sniffer",
  "version": "0.1.0",
  "description": "Chrome extension to monitor network requests and generate download scripts",
  "type": "module",
  "author": "cuzic",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cuzic/webreq-sniffer.git"
  },
  "keywords": [
    "chrome-extension",
    "network-monitoring",
    "webrequest",
    "hls",
    "dash",
    "m3u8",
    "download-helper"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "test": "node tests/setup/verify-package-json.test.js && node tests/setup/verify-vite-config.test.js && node tests/setup/verify-typescript-config.test.js && node tests/setup/verify-eslint-prettier.test.js && node tests/setup/verify-husky-lint-staged.test.js && node tests/setup/verify-react.test.js",
    "test:package": "node tests/setup/verify-package-json.test.js",
    "test:vite": "node tests/setup/verify-vite-config.test.js",
    "test:typescript": "node tests/setup/verify-typescript-config.test.js",
    "test:eslint": "node tests/setup/verify-eslint-prettier.test.js",
    "test:husky": "node tests/setup/verify-husky-lint-staged.test.js",
    "test:react": "node tests/setup/verify-react.test.js",
    "lint": "eslint .",
    "format": "prettier --write .",
    "prepare": "husky"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.2.0",
    "@types/chrome": "^0.1.24",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "@vitejs/plugin-react": "^5.0.4",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "vite": "^7.1.10"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,html,css}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  }
}
