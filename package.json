{
  "name": "webreq-sniffer",
  "version": "0.1.0",
  "description": "Chrome extension to monitor network requests and generate download scripts",
  "type": "module",
  "author": "cuzic",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cuzic/webreq-sniffer.git"
  },
  "keywords": [
    "chrome-extension",
    "network-monitoring",
    "webrequest",
    "hls",
    "dash",
    "m3u8",
    "download-helper"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "npm run icons && vite build",
    "package": "npm run build && node scripts/package-extension.js",
    "package:zip": "node scripts/package-extension.js",
    "icons": "node scripts/generate-icons.js",
    "screenshots": "xvfb-run --auto-servernum node scripts/generate-screenshots.js",
    "promo": "node scripts/generate-promo-tiles.js",
    "assets": "npm run icons && npm run promo",
    "test": "node tests/setup/verify-package-json.test.js && node tests/setup/verify-vite-config.test.js && node tests/setup/verify-typescript-config.test.js && node tests/setup/verify-eslint-prettier.test.js && node tests/setup/verify-husky-lint-staged.test.js && node tests/setup/verify-react.test.js && node tests/setup/verify-tailwind.test.js && node tests/setup/verify-shadcn.test.js && node tests/setup/verify-dependencies.test.js && node tests/setup/verify-manifest.test.js && node tests/types/verify-types.test.js && node tests/background/verify-service-worker.test.js && node tests/popup/verify-popup.test.js && node tests/options/verify-options.test.js",
    "test:package": "node tests/setup/verify-package-json.test.js",
    "test:vite": "node tests/setup/verify-vite-config.test.js",
    "test:typescript": "node tests/setup/verify-typescript-config.test.js",
    "test:eslint": "node tests/setup/verify-eslint-prettier.test.js",
    "test:husky": "node tests/setup/verify-husky-lint-staged.test.js",
    "test:react": "node tests/setup/verify-react.test.js",
    "test:tailwind": "node tests/setup/verify-tailwind.test.js",
    "test:shadcn": "node tests/setup/verify-shadcn.test.js",
    "test:deps": "node tests/setup/verify-dependencies.test.js",
    "test:manifest": "node tests/setup/verify-manifest.test.js",
    "test:types": "node tests/types/verify-types.test.js",
    "test:unit": "vitest run tests/unit",
    "test:unit:watch": "vitest tests/unit",
    "test:unit:ui": "vitest --ui tests/unit",
    "test:coverage": "vitest run --coverage tests/unit",
    "test:e2e": "xvfb-run --auto-servernum vitest run tests/e2e",
    "test:e2e:watch": "xvfb-run --auto-servernum vitest tests/e2e",
    "test:background": "node tests/background/verify-service-worker.test.js",
    "lint": "eslint .",
    "format": "prettier --write .",
    "prepare": "husky"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.2.0",
    "@tailwindcss/postcss": "^4.1.14",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/chrome": "^0.1.24",
    "@types/mustache": "^4.2.6",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/webextension-polyfill": "^0.12.4",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "archiver": "^7.0.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "happy-dom": "^20.0.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "puppeteer": "^24.25.0",
    "sharp": "^0.34.4",
    "tailwindcss": "^4.1.14",
    "typescript": "^5.9.3",
    "vite": "^7.1.10",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,html,css}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.546.0",
    "mustache": "^4.2.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "webextension-polyfill": "^0.12.0",
    "zod": "^4.1.12"
  }
}
